    "@types/node": "^17.0.45",
    "@types/pino": "^7.0.5",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
